# Environment variables (copy to .env and customize)

# Database
DATABASE_URL=postgresql://postgres:postgres@db:5432/magic_library

# Authentication
# Set to "false" to disable authentication and use single-user mode
AUTH_ENABLED=true

# Secret key for JWT tokens - CHANGE THIS IN PRODUCTION!
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=change-me-in-production-use-a-secure-random-key

# Card data JSON path (inside container)
CARD_DATA_JSON=/app/data/AllPrintings.json
